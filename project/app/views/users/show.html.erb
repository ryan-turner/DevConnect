<h3>Group Matches</h3>
<div class="matches">
<% if @matches.any? %>
  <% @matches.each do |m| %>
    <a class="match">
      <p>Name: <%= m.name %><br>
      Match Score: <%= m.score %><br>
      Interest: <%= m.interest %><br>
      Language: <%= m.language %><br>
      Meeting Time: <%= m.availability %></p>
    </a>
  <% end %>
<% else %>
  <p>No groups found.</p>
<% end %>
</div>
